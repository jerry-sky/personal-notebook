# https://i3wm.org/docs/userguide.html

# primary modifier key (Super_L, left “Windows” key)
set $mod Mod4


# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork


# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment–independent system tray GUI for it.
exec --no-startup-id nm-applet


# default paths
set $HOME /home/$USER
set $PN /home/$USER/notebooks/personal-notebook
set $HK /home/$USER/notebooks/personal-notebook/config/hotkeys
set $UTS /home/$USER/notebooks/personal-notebook/config/utility-scripts
set $IMG /home/$USER/Bilder


# refresh the i3 bar
set $refresh_i3status killall -SIGUSR1 i3status


# volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
# artificial microphone (un)mute
bindsym $mod+m exec --no-startup-id $HK/microphone-toggle.sh


# media control
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# screen brightness
bindsym XF86MonBrightnessUp exec sudo brightnessctl s 10%+
bindsym XF86MonBrightnessDown exec sudo brightnessctl s 10%-


# second keyboard layer (SKL)
set $skl "zweite Tastaturebene"
mode $skl {
    # decrease the step for greater precision {
    # screen brightness
    bindsym XF86MonBrightnessUp exec sudo brightnessctl s 1%+
    bindsym XF86MonBrightnessDown exec sudo brightnessctl s 1%-

    # volume
    bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% && $refresh_i3status
    bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% && $refresh_i3status
    # }

    # useful special commands {

    # microphone toggle
    bindsym space exec --no-startup-id $HK/microphone-toggle.sh

    # Discord
    bindsym x exec --no-startup-id $HK/discord-mute.sh
    bindsym c exec --no-startup-id $HK/discord-deafen.sh

    # OBS scene switcher
    bindsym 1 exec --no-startup-id $HK/obs-switch-scene.py '1'
    bindsym 2 exec --no-startup-id $HK/obs-switch-scene.py '2'
    bindsym 3 exec --no-startup-id $HK/obs-switch-scene.py '3'
    bindsym 4 exec --no-startup-id $HK/obs-switch-scene.py '4'
    bindsym 5 exec --no-startup-id $HK/obs-switch-scene.py '5'
    bindsym 6 exec --no-startup-id $HK/obs-switch-scene.py '6'
    bindsym 7 exec --no-startup-id $HK/obs-switch-scene.py '7'
    bindsym 8 exec --no-startup-id $HK/obs-switch-scene.py '8'
    bindsym 9 exec --no-startup-id $HK/obs-switch-scene.py '9'
    bindsym 0 exec --no-startup-id $HK/obs-switch-scene.py '0'
    bindsym q exec --no-startup-id $HK/obs-switch-scene.py 'q'
    bindsym w exec --no-startup-id $HK/obs-switch-scene.py 'w'
    bindsym e exec --no-startup-id $HK/obs-switch-scene.py 'e'
    bindsym r exec --no-startup-id $HK/obs-switch-scene.py 'r'
    bindsym t exec --no-startup-id $HK/obs-switch-scene.py 't'
    bindsym y exec --no-startup-id $HK/obs-switch-scene.py 'y'
    bindsym u exec --no-startup-id $HK/obs-switch-scene.py 'u'
    bindsym i exec --no-startup-id $HK/obs-switch-scene.py 'i'
    bindsym o exec --no-startup-id $HK/obs-switch-scene.py 'o'
    bindsym p exec --no-startup-id $HK/obs-switch-scene.py 'p'

    # OBS transitions
    bindsym m exec --no-startup-id $HK/obs-transitions.py 'm'
    bindsym comma exec --no-startup-id $HK/obs-transitions.py 'comma'
    bindsym period exec --no-startup-id $HK/obs-transitions.py 'period'
    bindsym slash exec --no-startup-id $HK/obs-transitions.py 'slash'
    #}

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+p mode "default"
    bindsym $mod+o mode $workspace
}
bindsym $mod+p mode $skl


# screenshots
# default maim command
set $maim maim --color=0.67,0.0,0.87,0.04 -l
# file screenshots
set $screenshot_filename $(date +'%Y-%m-%d_%H:%M:%S').png
bindsym Print exec --no-startup-id "$maim $IMG/$screenshot_filename"
bindsym $mod+Print exec --no-startup-id "$maim --window $(xdotool getactivewindow) $IMG/$screenshot_filename"
bindsym Shift+Print exec --no-startup-id "$maim --select $IMG/$screenshot_filename"
# clipboard screenshots
bindsym Ctrl+Print exec --no-startup-id "$maim | xclip -selection clipboard -t image/png"
bindsym Ctrl+$mod+Print exec --no-startup-id "$maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png"
bindsym Ctrl+Shift+Print exec --no-startup-id "$maim --select | xclip -selection clipboard -t image/png"


# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

# the middle button over a titlebar kills the window
bindsym --release button2 kill

# the middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# start dmenu (a program launcher)
bindsym $mod+g exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# screen lock
bindsym $mod+l exec i3lock -i ~/current-wallpaper-scaled -c 000000 -t -u

# exit session, shutdown, or restart the computer
set $session "den Computer h̲erunterfahren, n̲eu starten, oder i3 v̲erlassen"
mode  $session {
    bindsym v exec i3-msg exit; mode "default"
    bindsym h exec shutdown now; mode "default"
    bindsym n exec shutdown -r now; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+x mode "default"
}
bindsym $mod+Shift+x mode $session


# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart


# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky mode for the selected floating window
bindsym $mod+Ctrl+Shift+space sticky toggle

# set size to 1920x1080
bindsym $mod+Shift+y exec --no-startup-id "$UTS/alter-window-geometry.sh '__FOCUSED' '-1,-1,1920,1080'"

# focus the parent container
bindsym $mod+a focus parent

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        set $big_jump 110 px
        set $jump 50 px
        set $small_jump 20 px

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width $jump
        bindsym Down resize grow height $jump
        bindsym Up resize shrink height $jump
        bindsym Right resize grow width $jump

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Shift+Left resize shrink width $small_jump
        bindsym Shift+Down resize grow height $small_jump
        bindsym Shift+Up resize shrink height $small_jump
        bindsym Shift+Right resize grow width $small_jump

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Ctrl+Left resize shrink width $big_jump
        bindsym Ctrl+Down resize grow height $big_jump
        bindsym Ctrl+Up resize shrink height $big_jump
        bindsym Ctrl+Right resize grow width $big_jump

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

