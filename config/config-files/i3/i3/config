# https://i3wm.org/docs/userguide.html

# primary modifier key (Super_L, left “Windows” key)
set $mod Mod4
# add a second modifier key
exec --no-startup-id xmodmap -e 'keysym Pause = Super_L'

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment–independent system tray GUI for it.
exec --no-startup-id nm-applet

# use pactl to adjust volume in PulseAudio or to scroll
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id /home/$USER/keyboard-volume-knob/knob-up.sh && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id /home/$USER/keyboard-volume-knob/knob-down.sh && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id /home/$USER/keyboard-volume-knob/switch.sh && $refresh_i3status

bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# use `playerctl` to control media
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# screenshots
# default maim command
set $maim maim --color=0.67,0.0,0.87,0.04 -l
# file screenshots
bindsym Print exec --no-startup-id "$maim \\"/home/$USER/Bilder/$(date)\\""
bindsym $mod+Print exec --no-startup-id "$maim --window $(xdotool getactivewindow) \\"/home/$USER/Bilder/$(date)\\""
bindsym Shift+Print exec --no-startup-id "$maim --select \\"/home/$USER/Bilder/$(date)\\""
# clipboard screenshots
bindsym Ctrl+Print exec --no-startup-id "$maim | xclip -selection clipboard -t image/png"
bindsym Ctrl+$mod+Print exec --no-startup-id "$maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png"
bindsym Ctrl+Shift+Print exec --no-startup-id "$maim --select | xclip -selection clipboard -t image/png"

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill

# the middle button over a titlebar kills the window
bindsym --release button2 kill

# the middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# start dmenu (a program launcher)
bindsym $mod+g exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# screen lock
bindsym $mod+l exec i3lock -i ~/current-wallpaper-scaled -c 000000 -t -u

# exit session, shutdown, or restart the computer
set $session "den Computer h̲erunterfahren, n̲eu starten, oder i3 v̲erlassen"
mode  $session {
    bindsym v exec i3-msg exit; mode "default"
    bindsym h exec shutdown now; mode "default"
    bindsym n exec shutdown -r now; mode "default"

    bindsym q mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+x mode $session

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky mode for the selected floating window
bindsym $mod+Ctrl+Shift+space sticky toggle

# set size to 1920x1080
bindsym $mod+y exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,-1,1920,1080'"
# horizontal position: first, second, or third screen
bindsym $mod+u exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '0,-1,-1,-1'"
bindsym $mod+i exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '1920,-1,-1,-1'"
bindsym $mod+o exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '3840,-1,-1,-1'"
# horizontal position: almost off the third screen
bindsym $mod+p exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '5740,-1,-1,-1'"
# vertical position: center, or almost off the screen to the top
bindsym $mod+Shift+u exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,0,-1,-1'"
bindsym $mod+Shift+i exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,120,-1,-1'"
bindsym $mod+Shift+o exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,-940,-1,-1'"
bindsym $mod+Shift+p exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,-1060,-1,-1'"
# vertical position: barely on the screen (only 5 pixels visible + border pixels)
bindsym $mod+Shift+rightbracket exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '__FOCUSED' '-1,-1075,-1,-1'"

# focus the parent container
bindsym $mod+a focus parent

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        set $big_jump 110 px
        set $jump 50 px
        set $small_jump 20 px

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width $jump
        bindsym Down resize grow height $jump
        bindsym Up resize shrink height $jump
        bindsym Right resize grow width $jump

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Shift+Left resize shrink width $small_jump
        bindsym Shift+Down resize grow height $small_jump
        bindsym Shift+Up resize shrink height $small_jump
        bindsym Shift+Right resize grow width $small_jump

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Ctrl+Left resize shrink width $big_jump
        bindsym Ctrl+Down resize grow height $big_jump
        bindsym Ctrl+Up resize shrink height $big_jump
        bindsym Ctrl+Right resize grow width $big_jump

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command exec i3status
        font pango:Fira Code Medium 9
}

bindsym $mod+n $refresh_i3status

