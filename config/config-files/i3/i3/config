# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command exec i3status --transparency | /home/$USER/notebooks/personal-notebook/config/config-files/i3/i3status/wrapper.py
    font pango:FontAwesome, Fira Code Semibold 10.5
    tray_output primary
    colors {
        # inactive monitor
        separator #ffffff2f
        statusline #a095a1af
        background #00000000
        # active monitor
        focused_separator #ffffff4a
        focused_statusline #a095a1
        focused_background #E8727210
        # workspace indicators
        set $primary #21CF89
        set $primary_t #21CF898a
        set $primary_r #21CF892b
        set $secondary #101D27
        set $warn #efefef
        set $mode #FF572B
        # colorclass       <border>   <background> <text>
        focused_workspace  $secondary $primary     $secondary
        active_workspace   $primary_t $primary_r   $primary
        inactive_workspace $secondary $secondary   $primary
        urgent_workspace   $secondary $secondary   $primary
        urgent_workspace   $warn      $warn        $secondary
        binding_mode       $secondary $secondary   $mode
    }
}


# assign programs to workspaces

# WS-1, sound management
assign [class="(?i)cinnamon-settings sound"] workspace number $ws1
assign [class="(?i)pavucontrol"] workspace number $ws1
# OBS virtual projector
# — keep it always visible (sticky) so it can be used for screen-sharing
set $obs_projector (Windowed|Fullscreen)[[:blank:]]Projector.*
assign [title="$obs_projector"] workspace number $ws1
for_window [title="$obs_projector"] floating enable
for_window [title="$obs_projector"] sticky enable

# WS-2, communication: Discord, Telegram
assign [class="(?i)discord"] workspace number $ws2
for_window [class="(?i)discord"] layout tabbed
assign [class="(?i)Telegram"] workspace number $ws2
for_window [class="(?i)Telegram"] layout tabbed

# WS-19
# send Zoom to its punishment closet for very poor behaviour
assign [class="(?i).*zoom.*"] workspace number $ws19
# Zoom is not aligned with standard WM guidelines
for_window [class="(?i).*zoom.*"] floating enable

# move the annoying Discord Updater window that contains a very nauseating animation
for_window [title="Discord Updater"] exec --no-startup-id "$ULT/alter-window-geometry.sh 'Discord Updater' '-10000,-10000,-1,-1'"

for_window [class="pop-up"] floating enable


# launch the third workspace (1–2 are used as utility workspaces)
exec --no-startup-id i3-msg workspace $ws3

# **never** steal focus, at most mark as ‘urgent’
focus_on_window_activation urgent

# degrade mouse importance
mouse_warping none
focus_follows_mouse no


# gaps nad colours
gaps inner 0
for_window [class=".*"] border pixel 0
for_window [class=".*"] title_format " %title"
