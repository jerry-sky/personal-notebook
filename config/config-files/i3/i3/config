# monitor setup definition (xrandr)
set $screen_one HDMI-0
set $screen_two DP-1
set $screen_three DVI-I-1

# switch between monitors linearly
bindsym $mod+Ctrl+Right focus output right
bindsym $mod+Ctrl+Left focus output left
# …and directly
bindsym $mod+KP_Divide focus output $screen_one
bindsym $mod+KP_Multiply focus output $screen_two
bindsym $mod+KP_Subtract focus output $screen_three
# move workspaces between screens
bindsym $mod+Ctrl+Shift+Right move workspace to output right
bindsym $mod+Ctrl+Shift+Left move workspace to output left
# …and directly
bindsym $mod+Shift+KP_Divide move workspace to output $screen_one
bindsym $mod+Shift+KP_Multiply move workspace to output $screen_two
bindsym $mod+Shift+KP_Subtract move workspace to output $screen_three

# assign workspaces to screens
workspace $ws1 output $screen_one
workspace $ws2 output $screen_two
workspace $ws3 output $screen_three
workspace $ws4 output $screen_three
workspace $ws5 output $screen_three
workspace $ws19 output $screen_one
workspace $ws20 output $screen_one

# assign programs to workspaces
# communication: Discord, Telegram, Zoom
assign [class="(?i)discord"] workspace number $ws2
assign [class="(?i)Telegram"] workspace number $ws2
assign [class="(?i).*zoom.*"] workspace number $ws19
for_window [class="(?i).*zoom.*"] floating enable
# sound management
assign [class="(?i)cinnamon-settings sound"] workspace number $ws4
assign [class="(?i)pavucontrol"] workspace number $ws4
# OBS virtual projector — keep it always visible (sticky) but hidden from sight (moved 1080 pixels upwards)
set $obs_projector (Windowed|Fullscreen)[[:blank:]]Projector.*
assign [title="$obs_projector"] workspace number $ws4
for_window [title="$obs_projector"] floating enable
for_window [title="$obs_projector"] sticky enable
for_window [title="$obs_projector"] exec --no-startup-id "/opt/utility-scripts/alter-window-geometry.sh '$obs_projector' '5740,-1060,1920,1080'"
# disable auto-focus in screen sharing
no_focus [title="$obs_projector"]

# don’t steal focus
no_focus [class="(?i)jetbrains-studio"]
no_focus [class="(?i)Telegram"]
no_focus [class="(?i)discord"]
no_focus [title="(?i).*zoom.*"]
no_focus [class="(?i).*zoom.*"]
no_focus [class="(?i).*unity.*"]

